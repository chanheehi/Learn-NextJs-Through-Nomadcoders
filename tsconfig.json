{
  "compilerOptions": {
    "baseUrl": ".", // 프로젝트 루트 디렉토리
    "paths": {
      "@/*": ["./*"] // '@'는 프로젝트 루트를 가리킴
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, ".next/types/app/page.tsx", ".next/types/app/about-us/layout.tsx", ".next/types/app/layout.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
